<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/configuration_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:keepScreenOn="true"
    tools:context="com.acmerobotics.library.configuration.OpModeConfigurationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/opmode_configuration_title"
        android:padding="16dp"
        android:textSize="24sp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/alliance_color_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/pref_text_size"
            android:id="@+id/alliance_color_text_view"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/alliance_color_spinner"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:entries="@array/alliance_colors"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/match_type_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/pref_text_size"
            android:id="@+id/match_type_text_view"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/match_type_spinner"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:entries="@array/match_types"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/match_number_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/match_number_text_view"
                android:layout_margin="@dimen/pref_item_margin"
                android:layout_weight="1"
                android:textSize="@dimen/pref_text_size"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/match_number_value_text_view"
                android:layout_margin="@dimen/pref_item_margin"
                android:gravity="center_vertical"
                android:textSize="@dimen/pref_text_size"
                android:layout_weight="1"/>
        </LinearLayout>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/match_number_seek_bar"
            android:layout_margin="@dimen/pref_item_margin"
            android:max="29"
            android:progress="0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/delay_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/delay_text_view"
                android:layout_margin="@dimen/pref_item_margin"
                android:layout_weight="1"
                android:textSize="@dimen/pref_text_size"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/delay_value_text_view"
                android:layout_margin="@dimen/pref_item_margin"
                android:gravity="center_vertical"
                android:textSize="@dimen/pref_text_size"
                android:layout_weight="1"/>
        </LinearLayout>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:id="@+id/delay_seek_bar"
            android:layout_margin="@dimen/pref_item_margin"
            android:max="30"
            android:progress="0"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/num_balls_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/pref_text_size"
            android:id="@+id/num_balls_text_view"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/num_balls_spinner"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:entries="@array/num_balls"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/park_dest_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:id="@+id/park_dest_text_view"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/park_dest_spinner"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:entries="@array/park_dests"/>

    </LinearLayout>

    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:text="@string/robot_type_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/pref_text_size"
            android:id="@+id/robot_type_text_view"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/robot_type_spinner"
            android:layout_margin="@dimen/pref_item_margin"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:entries="@array/robot_types"/>

    </LinearLayout>

</LinearLayout>
